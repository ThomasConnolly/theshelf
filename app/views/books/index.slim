header.top-bar
  = form_tag '#', method: 'post', class: 'inline-form search-form'
    fieldset
      label.hide-visually for='search-field'
      input.search-field.kilo placeholder=t('books.search') type='search' autofocus='true'
      button.search-submit
        = fa_icon 'search', class: 'fa-flip-horizontal'
  .top-bar-actions
    = link_to t('books.actions.add'), new_book_path, class: 'btn-positive'

section.books
  ul.gallery
    - @books.each do |book|
      li.media
        .media-image
          = link_to image_tag(book.cover), book.path
        .media-body
          = link_to book.path, class: 'book-item'
            .book-title.milli.truncate = book.title
            .book-subtitle.nano.truncate = book.subtitle
            .book-stats
              .rating-stars.hide-visually
                = fa_icon 'star'
                = fa_icon 'star'
                = fa_icon 'star'
                = fa_icon 'star'
                = fa_icon 'star-o'
              .micro.book-total-reviews = t('reviews.total_reviews', count: book.total_reviews)
          .book-action = book.action
